<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="articleDaoJpa" class="eu.ensup.dao.ArticleDaoJpa" init-method="initialisation" destroy-method="destruction">
    </bean>

    <bean id="idao" class="eu.ensup.dao.ArticleDao" init-method="initialisation" destroy-method="destruction">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="dataSource" class="com.mysql.cj.jdbc.MysqlDataSource">
        <property name="url" value="jdbc:mysql://127.0.0.1:3309/gestionarticle" />
        <property name="user" value="spring" />
        <property name="password" value="spring" />
    </bean>
</beans>